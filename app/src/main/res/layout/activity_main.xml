<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#d84266">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="biographies"
        android:id="@+id/biographiesButton"
        android:background="#9dc249"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/discographyButton"
        android:layout_alignEnd="@+id/discographyButton"
        android:layout_margin="6dp"
        android:padding="3dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="discography"
        android:id="@+id/discographyButton"
        android:background="#9dc249"
        android:textColor="@android:color/black"
        android:padding="3dp"
        android:layout_marginLeft="33dp"
        android:layout_alignTop="@+id/tourButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tour"
        android:id="@+id/tourButton"
        android:background="#9dc249"
        android:textColor="@android:color/black"
        android:layout_above="@+id/listenButton"
        android:layout_alignLeft="@+id/listenButton"
        android:layout_alignStart="@+id/listenButton"
        android:layout_margin="6dp"
        android:padding="3dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listen"
        android:id="@+id/listenButton"
        android:background="#9dc249"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        android:padding="3dp"
        />
</RelativeLayout>
