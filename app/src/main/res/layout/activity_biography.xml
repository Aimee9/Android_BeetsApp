<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.epicodus.beetsbandapp.UI.BiographyActivity"
                android:background="#9dc249">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nameLabel"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="wendy"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memberImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameLabel"
        android:layout_marginTop="51dp"
        android:src="@drawable/wendy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keyboard"
        android:padding="6dp"
        android:layout_margin="6dp"
        android:layout_below="@+id/memberImage"
        android:id="@+id/instrumentLabel"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next bio"
        android:id="@+id/nextMemberButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#d84266"
        android:textColor="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/instrumentLabel"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="desc"
            android:id="@+id/bioLabel"
            android:layout_below="@+id/instrumentLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"/>
    </ScrollView>
</RelativeLayout>
